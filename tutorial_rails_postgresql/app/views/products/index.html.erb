<h1>Productos</h1>
<% if flash[:notice] %>
    <div class="notice"><b><%= flash[:notice] %></b></div>
<% end %>
<% if current_user %>
    Hola, <% current_user.userid %>
<% else %>
    <%= link_to 'Log in', new_session_path%>
<% end %>
<table>
    <tr>
        <head>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th></th>
        </head>
    </tr>
    <% @products.each do |product| %>
    <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td>
            <%= link_to 'Editar', edit_product_path(product) %>
            <%= link_to 'Eliminar', product, method: :delete, data:{confirm: "Estas seguro?"}%>
        </td>
    </tr>
    <% end %>
</table>
<%= link_to 'Nuevo producto', new_product_path() %>