<h1>Productos</h1>

<table>
    <tr>
        <head>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th></th>
        </head>
    </tr>
    <% @products.each do |product| %>
    <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td>
            <%= link_to 'Editar', edit_product_path(product) %>
            <%= link_to 'Eliminar', product, method: :delete, data:{confirm: "Estas seguro?"}%>
        </td>
    </tr>
    <% end %>
</table>
<%= link_to 'Nuevo producto', new_product_path() %>